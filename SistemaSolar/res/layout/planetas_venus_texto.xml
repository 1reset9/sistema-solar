            android:id="@+id/OrbitaRotacion3T"
            style="@style/TextoTexto"
            android:text="@string/venus_texto_orbita_rotacion3" />

        <Button
            android:id="@+id/OcultarVenusTextoOrbitaRotacion"
            style="@style/botonOcultar"
            android:text="@string/ocultar_texto" />

        <!-- Texto Observacion Estudio -->

        <Button
            android:id="@+id/VerVenusTextoObservacionEstudio"
            style="@style/botonVer"
            android:text="@string/titulo_observacion_estudio" />

        <TextView
            android:id="@+id/ObservacionEstudio1T"
            style="@style/TextoTexto"
            android:text="@string/venus_texto_observacion_estudio1" />

        <ImageView
            android:id="@+id/ObservacionEstudio2I"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/venus_texto_observacion_estudio_imagen1" />

