            android:id="@+id/Superficie6T"
            style="@style/TextoTexto.Imagen"
            android:text="@string/venus_texto_superficie3" />

        <ImageView
            android:id="@+id/Superficie7I"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/texto_venus_superficie2" />

        <TextView
            android:id="@+id/Superficie8C"
            style="@style/TextoFotosCredito"
            android:text="@string/Credit_NASA_JPL_ESA" />

        <TextView
            android:id="@+id/Superficie9T"
            style="@style/TextoTexto"
            android:text="@string/venus_texto_superficie4" />

        <Button
            android:id="@+id/OcultarVenusTextoSuperficie"
            style="@style/botonOcultar"
            android:text="@string/ocultar_texto" />

        <!-- Texto Orbita Rotacion -->

        <Button
            android:id="@+id/VerVenusTextoOrbitaRotacion"
            style="@style/botonVer"
            android:text="@string/titulo_orbita_rotacion" />

        <TextView
            android:id="@+id/OrbitaRotacion1T"
