<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_10" >

        <!-- Texto Estructura -->

        <Button
            android:id="@+id/VerVenusTextoEstructura"
            style="@style/botonVer"
            android:text="@string/titulo_estructura" />

        <TextView
            android:id="@+id/VenusTextoEstructura"
            style="@style/TextoTexto"
            android:text="@string/venus_texto_estructura" />

        <Button
            android:id="@+id/OcultarVenusTextoEstructura"
            style="@style/botonOcultar"
            android:text="@string/ocultar_texto" />

        <!-- Texto Superficie -->

        <Button
            android:id="@+id/VerVenusTextoSuperficie"
            style="@style/botonVer"
            android:text="@string/titulo_superficie" />

        <TextView
            android:id="@+id/Superficie1T"
            style="@style/TextoTexto"
            android:text="@string/venus_texto_superficie1" />

        <TextView
            android:id="@+id/Superficie2T"
            style="@style/TextoTexto.Imagen"
            android:text="@string/venus_texto_superficie1_imagen1" />

        <ImageView
            android:id="@+id/Superficie3I"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/texto_venus_superficie1" />

        <TextView
            android:id="@+id/Superficie4C"
            style="@style/TextoFotosCredito"
            android:text="@string/Credit_NASA" />

        <TextView
            android:id="@+id/Superficie5T"
            style="@style/TextoTexto"
            android:text="@string/venus_texto_superficie2" />

