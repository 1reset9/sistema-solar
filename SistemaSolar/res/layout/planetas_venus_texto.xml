            android:text="@string/venus_texto_observacion_estudio44" />

        <TextView
            android:id="@+id/ObservacionEstudio9T"
            style="@style/TextoTexto.Imagen"
            android:text="@string/venus_texto_observacion_estudio5" />

        <ImageView
            android:id="@+id/ObservacionEstudio10I"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/venus_texto_observacion_estudio_imagen3" />

        <TextView
            android:id="@+id/ObservacionEstudio11C"
            style="@style/TextoFotosCredito"
            android:text="@string/Credit_NASA" />

        <Button
            android:id="@+id/OcultarVenusTextoObservacionEstudio"
            style="@style/botonOcultar"
            android:text="@string/ocultar_texto" />
    </LinearLayout>

</ScrollView>