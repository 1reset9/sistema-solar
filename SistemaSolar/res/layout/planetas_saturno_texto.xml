<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_10" >

        <!-- Texto Estructura -->

        <Button
            android:id="@+id/VerSaturnoTextoEstructura"
            style="@style/botonVer"
            android:text="@string/titulo_estructura_completa" />

        <TextView
            android:id="@+id/SaturnoTextoEstructura1T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_estructura1" />

        <TextView
            android:id="@+id/SaturnoTextoEstructura2T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_estructura2" />

        <TextView
            android:id="@+id/SaturnoTextoEstructura3T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_estructura3" />

        <Button
            android:id="@+id/OcultarSaturnoTextoEstructura"
            style="@style/botonOcultar"
            android:text="@string/ocultar_texto" />

        <!-- Texto Atmósfera -->

        <Button
            android:id="@+id/VerSaturnoTextoAtmosfera"
            style="@style/botonVer"
            android:text="@string/titulo_atmosfera" />

        <TextView
            android:id="@+id/SaturnoTextoAtmosfera1T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_atmosfera1" />

        <TextView
            android:id="@+id/SaturnoTextoAtmosfera2T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_atmosfera2" />

        <TextView
            android:id="@+id/SaturnoTextoAtmosfera3T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_atmosfera3" />

        <ImageView
            android:id="@+id/SaturnoTextoAtmosfera4I"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/saturno_texto_atmosfera_imagen1" />

        <TextView
            android:id="@+id/SaturnoTextoAtmosfera5C"
            style="@style/TextoFotosCredito"
            android:text="@string/Credit_NASA_JPL_UA" />

        <Button
            android:id="@+id/OcultarSaturnoTextoAtmosfera"
            style="@style/botonOcultar"
            android:text="@string/ocultar_texto" />

        <!-- Texto Orbita Rotacion -->

        <Button
            android:id="@+id/VerSaturnoTextoOrbitaRotacion"
            style="@style/botonVer"
            android:text="@string/titulo_orbita_rotacion" />

        <TextView
            android:id="@+id/OrbitaRotacion1T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_orbita_rotacion1" />

        <TextView
            android:id="@+id/OrbitaRotacion2T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_orbita_rotacion2" />

        <Button
            android:id="@+id/OcultarSaturnoTextoOrbitaRotacion"
            style="@style/botonOcultar"
            android:text="@string/ocultar_texto" />

        <!-- Texto Satelites -->

        <Button
            android:id="@+id/VerSaturnoTextoSatelites"
            style="@style/botonVer"
            android:text="@string/titulo_satelites_naturales" />

        <TextView
            android:id="@+id/SaturnoTextoSatelites1T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_satelites1" />

        <ImageView
            android:id="@+id/SaturnoTextoSatelites2I"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/saturno_texto_satelites_imagen1" />

        <TextView
            android:id="@+id/SaturnoTextoSatelites3C"
            style="@style/TextoFotosCredito"
            android:text="@string/Credit_NASA" />

        <TextView
            android:id="@+id/SaturnoTextoSatelites4T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_satelites2" />

        <TextView
            android:id="@+id/SaturnoTextoSatelites5T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_satelites3" />

        <TableLayout
            android:id="@+id/SaturnoTextoSatelites6Tabla"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margen_tabla"
            android:layout_marginTop="@dimen/margen_tabla" >

            <TableRow>

                <TextView
                    style="@style/TablaTexto.PlanetaEnano"
                    android:text="@string/saturno_texto_satelites4" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TablaTexto.PlanetaEnano"
                    android:text="@string/saturno_texto_satelites5" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TablaTexto.PlanetaEnano"
                    android:text="@string/saturno_texto_satelites6" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/TablaTexto.PlanetaEnano"
                    android:text="@string/saturno_texto_satelites7" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/OcultarSaturnoTextoSatelites"
            style="@style/botonOcultar"
            android:text="@string/ocultar_texto" />

        <!-- Texto Observación y Estudio -->

        <Button
            android:id="@+id/VerSaturnoTextoObservacionEstudio"
            style="@style/botonVer"
            android:text="@string/titulo_observacion_estudio" />

        <TextView
            android:id="@+id/ObservacionEstudio1T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_observacion_estudio1" />

        <TextView
            android:id="@+id/ObservacionEstudio2T"
            style="@style/TextoTitulo.2"
            android:text="@string/saturno_texto_observacion_estudio_titulo1" />

        <TextView
            android:id="@+id/ObservacionEstudio3T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_observacion_estudio2" />

        <TextView
            android:id="@+id/ObservacionEstudio4T"
            style="@style/TextoTexto.Imagen"
            android:text="@string/saturno_texto_observacion_estudio_imagen1" />

        <ImageView
            android:id="@+id/ObservacionEstudio5I"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/saturno_texto_observacion_estudio_imagen1" />

        <TextView
            android:id="@+id/ObservacionEstudio6T"
            style="@style/TextoTitulo.2"
            android:text="@string/saturno_texto_observacion_estudio_titulo2" />

        <TextView
            android:id="@+id/ObservacionEstudio7T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_observacion_estudio3" />

        <TextView
            android:id="@+id/ObservacionEstudio8T"
            style="@style/TextoTitulo.2"
            android:text="@string/saturno_texto_observacion_estudio_titulo3" />

        <TextView
            android:id="@+id/ObservacionEstudio9T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_observacion_estudio4" />

        <TextView
            android:id="@+id/ObservacionEstudio10T"
            style="@style/TextoTexto.Imagen"
            android:text="@string/saturno_texto_observacion_estudio_imagen2" />

        <ImageView
            android:id="@+id/ObservacionEstudio11I"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/saturno_texto_observacion_estudio_imagen2" />

        <TextView
            android:id="@+id/ObservacionEstudio12C"
            style="@style/TextoFotosCredito"
            android:text="@string/Credit_NASA" />

        <TextView
            android:id="@+id/ObservacionEstudio13T"
            style="@style/TextoTexto"
            android:text="@string/saturno_texto_observacion_estudio5" />

        <ImageView
            android:id="@+id/ObservacionEstudio14I"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/saturno_texto_observacion_estudio_imagen3" />

        <TextView
            android:id="@+id/ObservacionEstudio15C"
            style="@style/TextoFotosCredito"
            android:text="@string/Credit_NASA" />

        <Button
            android:id="@+id/OcultarSaturnoTextoObservacionEstudio"
            style="@style/botonOcultar"
            android:text="@string/ocultar_texto" />
    </LinearLayout>

</ScrollView>